  "timeout-critical": 0,

  "widget-config": {
    "dnd": {
      "text": "Do Not Disturb"
    },

    "mpris": {
      "blur": true,
      "image-size": 64
    },

    "title": {
      "button-text": "Clear All",
      "clear-all-button": true,
      "text": "Notifications"
    }
  },

  "widgets": [
    "inhibitors",
    "dnd",
    "mpris",
    "notifications"
  ]
}
