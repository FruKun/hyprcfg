{
  "cssPriority": "user",
  "fit-to-screen": false,

  "layer": "overlay",
  "control-center-layer": "overlay",
  "layer-shell": true,

  "control-center-width": 300,
  "control-center-height": 600,
  "notification-window-width": 300,
  "notification-body-image-height": 100,
  "notification-body-image-width": 150,
  "notification-icon-size": 32,

  "positionX": "right",
  "positionY": "top",

  "timeout": 10,
